@model EPiServer.Reference.Commerce.Site.B2B.Models.ViewModels.OrdersPageViewModel
<div class="container-fluid">
    <div class="row myPage">
        @Html.Partial("_CmsNavigation", Model.CurrentPage)
        <main class="col-xs-12 col-sm-9">
            <div class="spacer-left-l">
                @{ Html.RenderAction("Index", "B2BNavigation");}
                <section>
                    <div class="section-title spacer-bottom-m">
                        <label>Filter by status:</label>
                    </div>
                    <select class="selectpicker orderStatusPicker">
                        <option value="All">All</option>
                        <option value="OnHold">On Hold</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="RequestedQuote">Requested Quote</option>
                        <option value="RequestedQuoteFinished">Requested Quote Finished</option>
                        <option value="RequestedQuoteExpired">Requested Quote Expired</option>
                    </select>
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Order No.</th>
                            <th>Placed On</th>
                            <th>Amount</th>
                            <th>SubOrganization</th>
                            <th>User</th>
                            <th>Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var order in Model.OrdersOrganization)
                        {
                            <tr class="orderElement @order.Status">
                                <td><a href="@order.OrderLink">#@order.OrderNumber</a></td>
                                <td>@order.PlacedOrderDate</td>
                                <td>@order.Currency @order.Ammount</td>
                                <td>@order.SubOrganization</td>
                                <td>@order.User</td>
                                <td>@order.Status</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </section>
            </div>
        </main>
    </div>
</div>

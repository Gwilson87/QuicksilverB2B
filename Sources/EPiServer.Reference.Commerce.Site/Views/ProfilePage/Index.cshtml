@model EPiServer.Reference.Commerce.Site.Features.Profile.ViewModels.ProfilePageViewModel
<div class="container-fluid">
    <div class="row myPage">
        @Html.Partial("_CmsNavigation", Model.CurrentPage)

        <main class="col-xs-12 col-md-9">
            <div class="spacer-left-l">
                <h2>@Html.PropertyFor(x => x.CurrentPage.Name)</h2>
                @Html.PropertyFor(x => x.CurrentPage.MainBody)
                <div class="max-width">
                    <div class="row spacer-top-l spacer-bottom-l">
                        <div class="col-xs-6 col-sm-3">
                            Name
                        </div>
                        <div class="col-xs-6">
                            <strong>@Model.Contact.FirstName @Model.Contact.LastName</strong>
                        </div>
                    </div>
                    @if (Model.Contact.B2BOrganization != null)
                    {
                        <div class="row spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                User type
                            </div>
                            <div class="col-xs-6">
                                <strong>@Model.Contact.UserRole</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                Organization
                            </div>
                            <div class="col-xs-6">
                                <strong>@Model.Contact.B2BOrganization.Name</strong> <a class="btn btn-primary btn-xs mypages-new-address-btn" href="@(Url.ContentUrl(Model.OrganizationPage))?showForm=true"><span class="fa fa-pencil"></span></a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Appears if there's no organization created -->
                        <div class="row spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                Organization
                            </div>
                            <div class="col-xs-6">
                                <a class="btn btn-primary btn-sm mypages-new-address-btn" href="@(Url.ContentUrl(Model.OrganizationPage))?showForm=true">Create</a>
                            </div>
                        </div>
                    }
                </div>
                @if(Model.Contact.Budget != null)
                {
                <!-- Wireframe 5.0 starts here -->
                <h2 class="h3">Personal Budget</h2>
                    <div class="max-width">
                        <div class="row spacer-top-l spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                Allocated
                            </div>
                            <div class="col-xs-6">
                                <strong>$20,000</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                Spent
                            </div>
                            <div class="col-xs-6">
                                <strong>$5,000</strong>
                            </div>
                        </div>
                        <div class="row spacer-bottom-l">
                            <div class="col-xs-6 col-sm-3">
                                Remaining
                            </div>
                            <div class="col-xs-6">
                                <strong class="text-success">$15,000</strong>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </main>
    </div>
</div>